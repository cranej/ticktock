#!/bin/sh

if [[ "$1" = "-d" ]]
then
  CCC="/home/crane/.local/bin/ticktock --db=/tmp/tracking.db"
  echo "Cmd: $CCC"
else
  CCC="/home/crane/.local/bin/ticktock --db=/mnt/nas/home/data/tracking.db"
fi

signaldw() {
	pkill -RTMIN+11 dwmblocks
}

case $(printf "start\nfinish\nongoing\n" | dmenu -p "Action: ") in
  start)
    title=$($CCC titles -n 10 -i | dmenu -p "Title: ");
    title=${title#*: };
    [[ -n "$title" ]] && $CCC start "$title" &&\
		notify-send -t 3000 "Started:" "$title" && signaldw;;
  finish) $CCC finish && signaldw;;
  ongoing)
    ongoing=$($CCC ongoing);
    notify-send -t 5000 "Ongoing:" "$ongoing" ;;
esac

